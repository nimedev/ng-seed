{
  "name": "ng-seed",
  "version": "4.3.2",
  "description": "A starting point for building web applications with Angular using Webpack and PostCSS",
  "scripts": {
    "build": "npm run install:dev && npm run build:prod",
    "build:prod": "npm run lint:ts && export NODE_ENV='production' && webpack --env.target production",
    "install:dev": "npm install --production=false",
    "lint": "npm run lint:css && npm run lint:js && npm run lint:ts",
    "lint:css": "stylelint 'src/**/*.css'",
    "lint:js": "eslint . --ext js",
    "lint:ts": "tslint -c 'src/tslint.json' -p 'src/tsconfig.json' 'src/**/*.ts'",
    "start": "npm run watch",
    "watch": "export NODE_ENV='development' && webpack-dev-server --env.target development"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nimedev/ng-seed.git"
  },
  "keywords": [
    "angular",
    "typescript",
    "webpack",
    "typings",
    "postcss"
  ],
  "author": "Nicolás Mejía Correa <nicolasmejiaco@gmail.com> (https://twitter.com/nimedev)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nimedev/ng-seed/issues"
  },
  "homepage": "https://github.com/nimedev/ng-seed#readme",
  "engines": {
    "npm": ">=5.4.0",
    "node": ">=8.3.0"
  },
  "dependencies": {
    "@angular/common": "4.4.0-RC.0",
    "@angular/core": "4.4.0-RC.0",
    "@angular/platform-browser": "4.4.0-RC.0",
    "@angular/router": "4.4.0-RC.0",
    "core-js": "2.5.1",
    "niduscss-base": "1.0.1",
    "niduscss-elements-form": "2.0.0",
    "niduscss-elements-link": "1.1.1",
    "niduscss-elements-typography": "1.1.2",
    "rxjs": "5.4.3",
    "zone.js": "0.8.17"
  },
  "devDependencies": {
    "@angular/compiler": "4.4.0-RC.0",
    "@angular/compiler-cli": "4.4.0-RC.0",
    "@angular/platform-browser-dynamic": "4.4.0-RC.0",
    "@ngtools/webpack": "1.6.2",
    "@types/node": "8.0.26",
    "clean-webpack-plugin": "0.1.16",
    "codelyzer": "3.1.2",
    "eslint": "4.6.1",
    "eslint-config-nimedev-base": "5.2.0",
    "eslint-plugin-import": "2.7.0",
    "ip": "1.1.5",
    "opener": "1.4.3",
    "postcss-niduscss": "1.0.2",
    "stylelint": "8.0.0",
    "stylelint-config-niduscss": "1.0.1",
    "tslint": "5.7.0",
    "tslint-config-nimedev-ng": "2.0.0",
    "typescript": "2.5.2",
    "webpack": "3.5.5",
    "webpack-kit-nimedev": "13.0.0",
    "webpack-merge": "4.1.0"
  },
  "eslintConfig": {
    "extends": "nimedev-base"
  },
  "stylelint": {
    "extends": "stylelint-config-niduscss"
  }
}
